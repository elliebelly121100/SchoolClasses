<div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
<h1>Student #<%= @student.id %></h1>

<div>
  <strong>Name</strong>:<br />
  <p><%= @student.name %></p>
</div>
<div>
  <strong>Email</strong>:<br />
  <p><%= @student.email %></p>
</div>

  <% @student.enrollments.each do |enrollment| %>
      <div class="list-group">
          <a href="/courses/<%=enrollment.course_id %>" class="list-group-item ">
            <h4 class="list-group-item-heading"><%= enrollment.course.name %></h4>  
          </a>
      </div>  

  <% end %>


<a href="/students/<%= @student.id %>/edit">Edit</a> |
<a href="/students/<%= @student.id %>/destroy">Destroy</a>
      </div>
  </div>
</div>
